<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.andre.vintagestore">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icontrans"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity

            android:name=".Main2Activity"
            android:label="@string/ActividadProductosNombre"
            android:parentActivityName=".MainActivity">

            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="com.example.andre.vintagestore.MainActivity" />

            <!--- Declaro los atributos label y parentActivityMain de la 2da activity -->

        </activity>
    </application>

    <uses-permission android:name="android.permission.SEND_SMS" />
    <!--- Pido permiso para poder usar la mensajeria -->

</manifest>